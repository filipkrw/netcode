{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Build",
      "command": "cmake",
      "args": ["-S", "${workspaceFolder}", "-B", "${workspaceFolder}/build"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "windows": {
        "args": [
          "-S",
          "${workspaceFolder}",
          "-B",
          "${workspaceFolder}/build",
          "-G \"MinGW Makefiles\""
        ]
      }
    },
    {
      "type": "shell",
      "label": "Make",
      "command": "make",
      "args": ["-C", "${workspaceFolder}/build"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "dependsOn": ["Build"],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "Build (Debug)",
      "command": "cmake",
      "args": [
        "-S",
        "${workspaceFolder}",
        "-B",
        "${workspaceFolder}/build",
        "-DCMAKE_BUILD_TYPE=Debug"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "windows": {
        "args": [
          "-S",
          "${workspaceFolder}",
          "-B",
          "${workspaceFolder}/build",
          "-DCMAKE_BUILD_TYPE=Debug",
          "-G \"MinGW Makefiles\""
        ]
      }
    },
    {
      "type": "shell",
      "label": "Make (Debug)",
      "command": "cmake",
      "args": ["--build", "${workspaceFolder}/build"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "dependsOn": ["Build (Debug)"],
      "group": "build"
    }
  ]
}
